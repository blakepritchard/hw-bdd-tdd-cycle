-#  This file is app/views/movies/director.html.haml
%h1= "Director: #{@selected_director}"

%table#movies
  %thead
    %tr
      %th{:class => @title_header}= link_to 'Movie Title', director_path(:sort => 'title', :ratings => @selected_ratings), :id => 'title_header'
      %th Rating
      %th{:class => @date_header}= link_to 'Release Date', director_path(:sort => 'release_date', :ratings => @selected_ratings), :id => 'release_date_header'
      %th Director
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Back to All Movies', movies_path
